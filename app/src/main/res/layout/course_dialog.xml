<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/et_name_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kurs nomi"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:padding="8dp"
        android:id="@+id/about_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:hint="Kurs haqida"
        app:layout_constraintTop_toBottomOf="@id/et_name_course"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/about_course"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Saqlash"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/tv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintRight_toLeftOf="@id/tv_save"
        app:layout_constraintTop_toBottomOf="@id/about_course"
        android:text="Yopish"
        android:textSize="24sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>